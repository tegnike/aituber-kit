################################################################################
# AITuberKit 本番環境設定ファイル / Production Environment Configuration File
################################################################################

#===============================================================================
# 基本設定 / Basic Settings
#===============================================================================

# NODE環境設定
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# デフォルト言語の設定
NEXT_PUBLIC_SELECT_LANGUAGE="ja"
NEXT_PUBLIC_CHANGE_ENGLISH_TO_JAPANESE="false"

# 本番環境用URL設定（実際のドメインに変更してください）
NEXTAUTH_URL=https://your-domain.com
NEXT_PUBLIC_APP_URL=https://your-domain.com

# 背景画像のパス
NEXT_PUBLIC_BACKGROUND_IMAGE_PATH="/backgrounds/bg-c.png"

# UI表示設定
NEXT_PUBLIC_SHOW_ASSISTANT_TEXT="true"
NEXT_PUBLIC_SHOW_CHARACTER_NAME="true"
NEXT_PUBLIC_SHOW_CONTROL_PANEL="true"
NEXT_PUBLIC_COLOR_THEME="default"

#===============================================================================
# キャラクター設定 / Character Settings
#===============================================================================

NEXT_PUBLIC_CHARACTER_NAME="ニケちゃん"
NEXT_PUBLIC_MODEL_TYPE="vrm"

# カスタムプリセット名
NEXT_PUBLIC_CUSTOM_PRESET_NAME1="Preset 1"
NEXT_PUBLIC_CUSTOM_PRESET_NAME2="Preset 2"
NEXT_PUBLIC_CUSTOM_PRESET_NAME3="Preset 3"

#===============================================================================
# セキュリティ設定 / Security Settings
#===============================================================================

# NextAuth.jsのシークレット（強力なランダム文字列に変更してください）
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# データベース認証情報（使用する場合）
POSTGRES_USER=aituber_user
POSTGRES_PASSWORD=strong-postgres-password-change-this
DATABASE_URL=postgresql://aituber_user:strong-postgres-password-change-this@postgres:5432/aituber

# Redis認証情報（使用する場合）
REDIS_PASSWORD=strong-redis-password-change-this
REDIS_URL=redis://:strong-redis-password-change-this@redis:6379

# 監視用認証情報
GRAFANA_PASSWORD=strong-grafana-password-change-this

#===============================================================================
# AI プロバイダー API キー / AI Provider API Keys
#===============================================================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION_ID=your-organization-id

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Groq
GROQ_API_KEY=your-groq-api-key

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key

# Mistral AI
MISTRAL_API_KEY=your-mistral-api-key

# Cohere
COHERE_API_KEY=your-cohere-api-key

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key

# xAI
XAI_API_KEY=your-xai-api-key

#===============================================================================
# 音声合成サービス / Text-to-Speech Services
#===============================================================================

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Google Cloud Text-to-Speech
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-cloud-key.json

# Azure Cognitive Services Speech
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-speech-region

# Cartesia
CARTESIA_API_KEY=your-cartesia-api-key

# Aivis Cloud API
AIVIS_CLOUD_API_KEY=your-aivis-cloud-api-key

# Style-Bert-VITS2（自己ホスト型の場合）
STYLE_BERT_VITS2_API_BASE=http://your-style-bert-vits2-server:5000

# VOICEVOX（自己ホスト型の場合）
VOICEVOX_API_BASE=http://your-voicevox-server:50021

# Koeiromap
KOEIROMAP_API_KEY=your-koeiromap-api-key

# Nijivoice
NIJIVOICE_API_KEY=your-nijivoice-api-key

#===============================================================================
# 外部サービス連携 / External Service Integration
#===============================================================================

# YouTube Live機能（使用する場合）
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# Supabase（使用する場合）
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key

#===============================================================================
# アップロード・ストレージ設定 / Upload & Storage Settings
#===============================================================================

# ファイルアップロード制限（バイト単位）
MAX_FILE_SIZE=20971520
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_AUDIO_TYPES=audio/wav,audio/mp3,audio/ogg

# 静的ファイルのベースパス（CDN使用時）
# NEXT_PUBLIC_STATIC_BASE_URL=https://your-cdn-domain.com

#===============================================================================
# ログ設定 / Logging Configuration
#===============================================================================

LOG_LEVEL=info
LOG_FORMAT=json

# ログファイル設定
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=/app/logs

# 外部ログサービス（DatadogやNew Relicなど、使用する場合）
# DATADOG_API_KEY=your-datadog-api-key
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

#===============================================================================
# パフォーマンス設定 / Performance Settings
#===============================================================================

# Next.jsのワーカープロセス数
UV_THREADPOOL_SIZE=128

# メモリ制限（Node.js）
NODE_OPTIONS="--max-old-space-size=1024"

#===============================================================================
# 開発・デバッグ設定 / Development & Debug Settings（本番では無効化）
#===============================================================================

# 本番環境では以下をfalseまたはコメントアウト
DEBUG=false
# NEXT_PUBLIC_ENABLE_DEBUG_PANEL=false